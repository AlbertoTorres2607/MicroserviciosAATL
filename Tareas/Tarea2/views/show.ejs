    <div class="container mt-4">
        <div class="row">
            <div class="col-md-8 mx-auto">
                <div class="card">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h1 class="mb-0">Detalles del Contacto</h1>
                        <div>
                            <a href="/contactos/<%= contacto._id %>/edit" class="btn btn-warning">Editar</a>
                            <a href="/" class="btn btn-secondary">Volver</a>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <p><strong>Nombres:</strong> <%= contacto.nombres %></p>
                                <p><strong>Apellidos:</strong> <%= contacto.apellidos %></p>
                                <p><strong>Fecha de Nacimiento:</strong> 
                                   <%= new Date(contacto.fecha_nacimiento).toLocaleDateString('es-ES') %></p>
                            </div>
                            <div class="col-md-6">
                                <p><strong>Celular:</strong> 
                                   <a href="tel:<%= contacto.celular %>"><%= contacto.celular %></a></p>
                                <p><strong>Correo:</strong> 
                                   <a href="mailto:<%= contacto.correo %>"><%= contacto.correo %></a></p>
                                <p><strong>DirecciÃ³n:</strong> <%= contacto.direccion %></p>
                            </div>
                        </div>
                        
                        <hr>
                        
                        <!-- Acciones adicionales -->
                        <div class="d-flex justify-content-end">
                            <form method="POST" action="/contactos/<%= contacto._id %>?_method=DELETE" 
                                  style="display: inline;" 
                                  onsubmit="return confirm('Â¿EstÃ¡s seguro de eliminar este contacto?')">
                                <button type="submit" class="btn btn-danger">Eliminar Contacto</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>